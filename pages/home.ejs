<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=ISO-8859-1">
<title>Talk Home</title>
<link rel="stylesheet" href="../css/styles.css" media="screen" type="text/css" />

<script>
function validateField(){
	$val = $(#broadcast_message).val();
	if(val = "")
		return false;
	else
		return true;
}
</script>

</head>
<body>
	<div class="header"><h1>Welcome <%=user%></h1></div>
	<div class="servmsg"><h2><%=server_message%></h2></div>

		<div id='cssmenu'>
		<ul>
			<li class='active'><a href="#">Broadcast</a></li>
			<li><a href="/recieved_broadcasts">Recieved Brodcasts</a></li>
			<li><a href="/threads">Threads</a></li>
			<li><a href="/logout">Logout</a></li>
		</div>




	<form class="home_form" id="home_form" name="home_form" onsubmit="return validateHome()" method="POST" action="/broadcast">
  	    <div class="content">
	    <%
		var i;
		for(i = 0; i < users.length; i++){
			%><div class="listelement"><input type="checkbox" class="checkbox" name="uid" value=<%=users[i].uid%> ><%=users[i].first_name+" "+users[i].last_name%><br></div><%
		}
	    %>
	    <input id="broadcast_message" type="textarea" name="broadcast_message"/>
	    <input type="submit" value="Broadcast" onsubmit="return validateField();"/>
	</form>
	</div>
	
</body>
</html>
