								SELECT sender, reciever\
						FROM msg, shout\
						WHERE msg.msg_id = shout.msg_id\
						AND msg.msg_id = ?,'
						
SELECT shout.reciever
FROM talk.msg, talk.shout
WHERE msg.msg_id = shout.msg_id
AND msg.sender = 1
AND msg_id = '19';

SELECT sender, shout.reciever, shout.msg_id
FROM talk.msg, talk.shout
WHERE msg.msg_id = shout.msg_id
AND msg.sender = 3
AND msg.msg_id = '17'


SELECT shout.reciever
FROM talk.msg, talk.shout
WHERE msg.msg_id = shout.msg_id
AND msg.sender = '1'
AND msg.msg_id = '18'

SELECT uid, first_name, last_name, msg.msg_id, msg.create_ts as ts
FROM talk.user, talk.msg, talk.shout				WHERE user.uid = msg.sender AND msg.msg_id = shout.msg_id AND shout.reciever = 1 ORDER BY ts DESC



